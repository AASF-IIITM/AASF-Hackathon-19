<% include partials/header1 %>
    <!-- Patient Area Starts -->
    <section class="patient-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="section-top text-center">
                        <h2><%=medical.name%></h2>
                        <p><%=medical.city%></p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-patient mb-4">
                        <img src="<%=medical.image%>" alt="">
                        <h3><%=medical.name%></h3>
                        <h5><%=medical.address%></h5>
                        <h5><%=medical.city%></h5>
                        <h5><%=medical.email%></h5>
                        <h5><%=medical.contact%></h5>
                        <% if(currentUser){ %>
                        <p><form method="GET"  action="/medicals/edit/<%= medical._id %>">
                                <button class="genric-btn success circle arrow">Edit</button>
                            </form>
                        </p>
                        <p><form method="POST" action="/medicals/<%=medical._id%>?_method=DELETE">
                                <button class="genric-btn success circle arrow">Delete</button>
                            </form>
                        </p>                            
                        <%  } %>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Patient Area Starts -->
<% include partials/footer1 %>